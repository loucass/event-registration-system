<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap.css">
    <script src="/home.js" defer></script>
    <title>
        <%= name %> home page
    </title>
    <style>
        body {
            margin-top: 20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0, 0, 0, .125);
            border-radius: .25rem;
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

        .gutters-sm>.col,
        .gutters-sm>[class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

        .mb-3,
        .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }

        .custom-pop {
            position: fixed;
            top: 30px;
            margin-left: 50%;
            -webkit-animation: popup 3s ease-in-out;
            animation: popup 3s ease-in-out;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="main-body">
            <div class="ms-auto d-flex">
                <!-- <input type="text" placeholder="search" class="ms-auto rounded-pill" id="searchInHome">
                <button class="btn btn-dark btn-outline-info ms-3 rounded-pill">search</button> -->
            </div>
            <div class="gutters-sm row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <a href="/profile" class="text-black text-decoration-none">
                                    <img src="/user.svg" alt="Admin" class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <h4>
                                            <%= name %>
                                        </h4>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-8" id="eventsCard">
                <% if (events.length>0) { %>
                    <% events.forEach(element=> { %>
                        <div class="card my-3" data-iodFF="<%= element.ID %>">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-start">
                                    <h4>
                                        <%= element.eventTitle %> <span class="text-secondary fs-6">posted at: <%=
                                                    element.created_at %></span>
                                    </h4>
                                    <%= element.userName %>
                                        <div class="d-flex justify-content-evenly w-100 my-3">
                                            <div>
                                                date :<small class="text-info">
                                                    <%= element.eventDate %>
                                                </small>
                                            </div>
                                            <div>
                                                location :<small class="text-info">
                                                    <%= element.location %>
                                                </small>
                                            </div>
                                            <div>
                                                <% if (element.maxMembers) { %>
                                                    max size :<small class="fw-bold text-success">
                                                        <%= element.maxMembers %>
                                                    </small>
                                                    <% }else{ %>
                                                        max size :<small class="text-success fw-bold">no limit</small>
                                                        <% } %>
                                            </div>
                                        </div>
                                        <div class="my-2">
                                            <%= element.eventDescription %>
                                        </div>
                                        <div>
                                            <% if (element.maxMembers) { %>
                                                available seats: <small class="fw-bold text-success">
                                                    <% attendance.forEach(element2=> { %>
                                                        <% if (element2.ID==element.ID ) { %>
                                                            <%= element.maxMembers - element2.attendance %>
                                                                <% } %>
                                                                    <% }) %>
                                                </small>
                                                <% } %>
                                        </div>
                                </div>
                                <% if (element.joined==null) { %>
                                    <% if (element.maxMembers) { %>
                                        <% attendance.forEach(element2=> { %>
                                            <% if (element2.ID==element.ID ) { %>
                                                <% let total=element.maxMembers - element2.attendance %>
                                                    <% if (total>0){ %>
                                                        <button class="w-100 btn btn-dark btn-outline-info join">join
                                                            event</button>
                                                        <% }else{ %>
                                                            <span class='text-danger fw-bold'>no more seats</span>
                                                            <% } %>
                                                                <% }})}else{ %>
                                                                    <button
                                                                        class="w-100 btn btn-dark btn-outline-info join">join
                                                                        event</button>
                                                                    <% } %>
                                                                        <% }else{ %>
                                                                            <span class='text-success'>joined</span>
                                                                            <% } %>
                            </div>
                        </div>
                        <% }) %>
                            <% } else{%>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex flex-column align-items-start">
                                            <span>no events</span>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
            </div>
        </div>
    </div>
    </div>
    </div>
</body>

</html>